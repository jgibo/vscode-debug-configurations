    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "program": "${workspaceFolder}/main.py",
            "env": {"ASD": "123"},
            "console": "internalConsole",
            "justMyCode": false
        },
        {
            "name": "docker attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "127.0.0.1",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "console": "internalConsole",
            "justMyCode": false
        }
    ]
}